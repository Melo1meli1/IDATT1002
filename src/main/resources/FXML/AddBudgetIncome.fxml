<GridPane layoutX="-3.0" layoutY="-1.0" maxHeight="320.0" maxWidth="500.0"
          minHeight="320.0" minWidth="500.0" prefHeight="320.0" prefWidth="500.0"
          style="-fx-background-color: White; -fx-background-radius: 16;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="no.idatt1002.controller.Budget.BudgetIncomeController">

    <rowConstraints>
