        <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="60.0" />
        <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="60.0" />
        <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="60.0" />
    </rowConstraints>
    <Label alignment="CENTER" text="Legg til inntekt-kategori">
        <font>
            <Font size="27.0" />
        </font>
        <GridPane.margin>
            <Insets left="16.0" />
        </GridPane.margin>
    </Label>
    <Label text="Kategori:" GridPane.rowIndex="1">
        <font>
            <Font size="18.0" />
        </font>
        <GridPane.margin>
            <Insets left="16.0" />
        </GridPane.margin>
    </Label>
    <TextField fx:id="category" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Kategori">
        <GridPane.margin>
            <Insets right="16.0" />
        </GridPane.margin>
    </TextField>
    <Label alignment="CENTER" text="Sum:" GridPane.rowIndex="2">
        <font>
            <Font size="18.0" />
        </font>
        <GridPane.margin>
            <Insets left="16.0" />
        </GridPane.margin>
    </Label>
    <TextField fx:id="sum" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="sum">
        <GridPane.margin>
